{
  "compilerOptions": {
    "target": "ES2020", // Modern JavaScript output
    "module": "ESNext", // Enable import/export syntax
    "moduleResolution": "node", // Node-style resolution
    "resolveJsonModule": true,
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "outDir": "dist", // Where compiled files go
    "rootDir": "src" // Where your source TypeScript files are
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
